{% extends '::base.html.twig' %}
{%  block title %}Productos {% endblock %}
{%  block body  %}

<div>
    <form method="post" action="{{ action }}" novalidate="novalidate">
        <div>
            {{ dump(form.vars.value) }}

            <ul>

                {% for error in form.vars.errors %}
                    <li>{{ error.message }}</li>
                {% endfor %}
            </ul>
        </div>
            <div>{{ form_label(form.description) }} : {{ form_widget(form.description) }}</div>
            <div>{{ form_label(form.name) }}: {{ form_widget(form.name) }}</div>
            <div>{{ form.errors(form.price) }}{{ form_label(form.price) }}: {{ form_widget(form.price) }}</div>
                {{ form_rest(form) }}
                <div><input type="submit" value="Guardar"></div>

    </form>
</div>
{% endblock %}
